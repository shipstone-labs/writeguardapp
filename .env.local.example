# OnchainKit Configuration
# Get your API key from https://portal.cdp.coinbase.com/
NEXT_PUBLIC_ONCHAINKIT_API_KEY=

# WalletConnect Project ID
# Get your project ID from https://cloud.walletconnect.com/
NEXT_PUBLIC_WC_PROJECT_ID=

# Base Network Configuration
NEXT_PUBLIC_CHAIN_ID=8453
NEXT_PUBLIC_CHAIN_NAME=Base
NEXT_PUBLIC_RPC_URL=https://mainnet.base.org

# Base Testnet (Sepolia) - uncomment for testing
# NEXT_PUBLIC_CHAIN_ID=84532
# NEXT_PUBLIC_CHAIN_NAME=Base Sepolia
# NEXT_PUBLIC_RPC_URL=https://sepolia.base.org

# IPFS Configuration (optional)
# Set to true to enable IPFS uploads
NEXT_PUBLIC_ENABLE_IPFS=false

# Pinata IPFS Gateway (https://www.pinata.cloud/)
NEXT_PUBLIC_PINATA_API_KEY=
NEXT_PUBLIC_PINATA_SECRET_KEY=

# Alternative: Web3.Storage (https://web3.storage/)
NEXT_PUBLIC_WEB3_STORAGE_TOKEN=

# HuggingFace API for paper embeddings
# Get your API key from https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=

# For contract deployment (DO NOT commit!)
# Your wallet private key for deploying contracts
PRIVATE_KEY=

# BaseScan API for contract verification
# Get your API key from https://basescan.org/myapikey
BASESCAN_API_KEY=